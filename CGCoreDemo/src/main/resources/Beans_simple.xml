<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<!-- Enable Annotation based configuration -->
	<context:annotation-config />

	<bean id="messagePrinter" class="com.spring.cg.MessagePrinterBean">
		<property name="message" value="Welcome to the world of Spring!"/>
	</bean>
	
	<bean id="messagePrinterConstructor" class="com.spring.cg.MessagePrinterBean" init-method = "init" destroy-method = "destroy">
		<constructor-arg value="Hello from constructor-arg"></constructor-arg>
	</bean>
	
	<bean id="messagePrinterProto" class="com.spring.cg.MessagePrinterBean" scope = "prototype">
	</bean>

	<bean id="project_1" class="com.spring.cg.ProjectBean" lazy-init="true">
	    <property name="name" value="OpenOffice" />
	    <property name="department" value="Support" />
	</bean>

	<bean id="project_2" class="com.spring.cg.ProjectBean" lazy-init="false">
	    <property name="name" value="MSOffice" />
	    <property name="department" value="Support" />
	</bean>
</beans>
